<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NormanExchange</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
  <script src="/scripts.js"></script>
</head>
<body style="background-color: #990000; color: #FFFDD0; font-family: Inter, sans-serif; margin: 0; min-height: 100vh; display: flex; flex-direction: column;">
  <header class="nav">
    <div class="nav-container">
      <div class="nav-top">
        <h1 class="nav-brand">
          <a href="/norman" style="color: #990000; text-decoration: none; display: flex; align-items: center;">
            <img src="/site_uploads/Copilot_20251005_155740.png" alt="Norman Exchange" class="nav-logo" style="width: 180px; height: auto;">
          </a>
        </h1>
        <nav class="nav-links">
          <% if (user) { %>
            <a href="/profile" class="nav-link">Profile</a>
            <a href="/post" class="nav-link">Post</a>
            <% if (user.username === 'GrantEakins') { %>
              <a href="/admin/listings" class="nav-link">Admin</a>
            <% } %>
            <a href="/signout" class="nav-link">Sign Out</a>
          <% } else { %>
            <a href="/signin" class="nav-link">Sign In</a>
            <a href="/signup" class="nav-link">Sign Up</a>
          <% } %>
        </nav>
      </div>
      <div class="nav-bottom">
        <div class="search-container">
          <form action="/" method="GET" class="search-form">
            <input type="text" name="q" placeholder="Search for items, categories, or sellers..." value="<%= query %>" class="search-input">
            <button type="submit" class="search-btn">Search</button>
          </form>
        </div>
      </div>
    </div>
  </header>

  <main style="flex: 1; padding: 1rem; background-color: #990000;">
    <div class="container">
      <%- include('partials/flash') %>

      <% if (listings.length > 0) { %>
        <div class="listings-grid">
          <% listings.forEach(listing => { %>
            <div class="card">
              <a href="/listing/<%= listing._id %>" style="text-decoration: none; display: block;">
                <% if (listing.images.length > 0) { %>
                  <img src="<%= listing.images[0] %>" alt="<%= listing.title %>" style="width: 100%; height: 12rem; object-fit: cover; border-radius: 0.375rem; margin-bottom: 1rem;">
                <% } %>
                <h3 style="color: #990000; font-weight: bold; font-size: 1.125rem; margin-bottom: 0.5rem;"><%= listing.title %></h3>
                <p style="font-size: 1rem; font-weight: bold; margin-bottom: 0.5rem;">$<%= listing.price %></p>
                <p style="font-size: 0.875rem; color: #666666; margin-bottom: 0.5rem;"><%= listing.description ? listing.description.substring(0, 100) + '...' : '' %></p>
              </a>
              <% if (user) { %>
                <form action="/create-checkout-session/<%= listing._id %>" method="POST">
                  <button type="submit" class="buy-button" style="background-color: #990000; color: #FFFDD0; font-weight: bold; padding: 0.5rem 1rem; border-radius: 0.375rem; border: none; cursor: pointer;">Buy Now</button>
                </form>
              <% } %>
            </div>
          <% }) %>
        </div>

        <div style="margin-top: 2rem; display: flex; justify-content: space-between;">
          <% if (hasPrevPage) { %>
            <a href="?page=<%= prevPage %>&q=<%= query %>" style="color: #990000; text-decoration: none;">Previous</a>
          <% } %>
          <span>Page <%= currentPage %> of <%= totalPages %></span>
          <% if (hasNextPage) { %>
            <a href="?page=<%= nextPage %>&q=<%= query %>" style="color: #990000; text-decoration: none;">Next</a>
          <% } %>
        </div>
      <% } else { %>
        <p>No listings found.</p>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <div class="footer-content">
      <div class="footer-links">
        <a href="/about" class="footer-link">About</a>
        <a href="/help" class="footer-link">Help</a>
      </div>
      <p>Â© Norman Exchange</p>
    </div>
  </footer>
</body>
</html>